<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity"
android:orientation="vertical"
android:paddingTop="50dp"
    >

<TextView android:id="@+id/head"
    android:layout_width="150dp"
    android:layout_height="90dp"
    android:text="TepitoFlix"
    android:layout_gravity="center"
    android:textSize="30sp"
    />
<TextView android:id="@+id/text1"
    android:layout_width="150dp"
    android:layout_height="45dp"
    android:layout_gravity="center"
    android:text="Opciones"
    android:textSize="30sp"
    />
<Button android:id="@+id/downloadFile"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="Descargar Datos"

    />
<Button android:id="@+id/saveFile"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="Carga archivo"
    />

<Button android:id="@+id/viewMoviesList"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="visualiza"
    />
<Button android:id="@+id/deleteMovie"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="Elimina"
    />
</LinearLayout>
